                        $("#Inside_diameter").css("color","red");
                }
            $("#Inside_diameter_default").html(data_range_300.Inside_diameter);
            $("#Inside_diameter_positive").html(data_range_300.Inside_diameter_positive);
            $("#Inside_diameter_negative").html(data_range_300.Inside_diameter_negative);

            $("#Length").val(data_range_300.Length); 
            $("#Length_default").html(data_range_300.Length);
            $("#Length_positive").html(data_range_300.Length_positive);
            $("#Length_negative").html(data_range_300.Length_negative);

            $("#Thickness").val(data_range_300.Thickness); 
            $("#Thickness_default").html(data_range_300.Thickness);
            $("#Thickness_positive").html(data_range_300.Thickness_positive);
            $("#Thickness_negative").html(data_range_300.Thickness_negative);

            $("#Outer_diameter").val(data_range_300.Outer_diameter); 
            $("#Outer_diameter_default").html(data_range_300.Outer_diameter);
            $("#Outer_diameter_positive").html(data_range_300.Outer_diameter_positive);
            $("#Outer_diameter_negative").html(data_range_300.Outer_diameter_negative);

            
                
            }
        if(document.getElementsByName('Inside_diameter')[0].value < 1101 && document.getElementsByName('Inside_diameter')[0].value > 901){
            if(document.getElementsByName('Inside_diameter')[0].value > 1000 || document.getElementsByName('Inside_diameter')[0].value < 994){
                    //$("#Inside_diameter").css("background-color","red"); 
                    $("#Inside_diameter").css("color","red"); 
                }
            $("#Inside_diameter_default").html(data_range_1000.Inside_diameter);
            $("#Inside_diameter_positive").html(data_range_1000.Inside_diameter_positive);
            $("#Inside_diameter_negative").html(data_range_1000.Inside_diameter_negative);
            
            $("#Length").val(data_range_1000.Length); 
            $("#Length_default").html(data_range_1000.Length);
            $("#Length_positive").html(data_range_1000.Length_positive);
            $("#Length_negative").html(data_range_1000.Length_negative);

            $("#Thickness").val(data_range_1000.Thickness); 
            $("#Thickness_default").html(data_range_1000.Thickness);
            $("#Thickness_positive").html(data_range_1000.Thickness_positive);
            $("#Thickness_negative").html(data_range_1000.Thickness_negative);

            $("#Outer_diameter").val(data_range_1000.Outer_diameter); 
            $("#Outer_diameter_default").html(data_range_1000.Outer_diameter);
            $("#Outer_diameter_positive").html(data_range_1000.Outer_diameter_positive);
            $("#Outer_diameter_negative").html(data_range_1000.Outer_diameter_negative);
            }
        if(document.getElementsByName('Inside_diameter')[0].value == docnull){
            $("#Inside_diameter").css("color","black"); 
            $("#Inside_diameter_default").html("預設值");
            $("#Inside_diameter_positive").html("正差");
            $("#Inside_diameter_negative").html("負差");
            }
            });   
        });
</script>

